<div class="banner-affiliate row">
  <div class="col-xs-12 col-sm-5">
    <h1><%= @affiliate.name.upcase %></h1>
    <%= cl_image_tag @affiliate.logo, height: '80' %>
    <h2><%= @affiliate.tagline.capitalize %></h2>
    <% @affiliates.each do |affiliate| %>
      <% unless affiliate == @affiliate %>
        <%= link_to affiliate_path(affiliate.name) do %>
          <%= cl_image_tag affiliate.logo, height: '80' %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-7" id="slider-affiliate-images">
    <% @affiliate.affiliate_images.each do |image| %>
      <%= cl_image_tag image.url %>
    <% end %>
  </div>
</div>

<div class="container">
  <% @affiliate.affiliate_categories.each do |category| %>
    <div class="affiliate-category-card white-box">
      <div class="affiliate-category-card-image">
        <%= cl_image_tag category.image %>
      </div>
      <div class="affiliate-category-card-content">
        <h3><%= category.name.upcase %></h3>
        <strong><%= category.spec %></strong>
        <p><%= category.description %></p>
        <%= link_to "Demande d'informations", contact_path, class: 'loxam-btn' %>
      </div>
    </div>
  <% end %>
</div>
