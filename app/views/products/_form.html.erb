<%= simple_form_for @product do |f| %>
  <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :reference %>
    <%= f.input :category %>
    <%= f.input :price %>
    <%= f.input :characteristics %>
    <%= f.input :deposit %>
    <%= f.input :technical_sheet %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :video %>
    <%= f.input :loxam_link %>
    <%= f.button :submit %>
<% end %>
