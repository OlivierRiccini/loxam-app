<h1>Hola! from admin dashboard </h1>

<% @lines.each do |line| %>
  <p><%= line %></p>
<% end %>
<p>admin? <%= current_user.admin %></p>
<ul>
  <% @users.each do |user| %>
    <li><%= user.company %></li>
  <% end %>
</ul>

<%= link_to 'Ajouter un produit', new_product_path %>
<br>
<br>
<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.name, product_path(product) %> -
      <%= link_to "Supprimer ce poduit", product_path(product), :method => :delete, :data => {:confirm => "Veux-tu vraiment supprimer ce produit Jano?"}, class: 'action-btn red-btn' %> -
      <%= link_to "Modifier produit", edit_product_path(product) %></li>
  <% end %>
</ul>
