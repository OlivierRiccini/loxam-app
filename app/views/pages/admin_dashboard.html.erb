<div class="dashboard-body">
  <h1 class="text-center title-dashboard">Hola! from your dashboard</h1>

  <div class="container dashboard-container">
    <div class="row tabs">
      <div class="col-xs-4 col-sm-2 tab" data-section="messages"><div class="reload-notif"><span class="nb-unchecked-messages notification"><%= Message.where(checked: false).count %></span></div> Messages</div>
      <div class="col-xs-4 col-sm-2 tab" data-section="categories">Catégories</div>
      <div class="col-xs-4 col-sm-2 tab tab-active" data-section="products">Matériels</div>
      <div class="col-xs-4 col-sm-2 tab" data-section="promos">Promos</div>
      <div class="col-xs-4 col-sm-2 tab" data-section="users">Clients/Fact°</div>
      <div class="col-xs-4 col-sm-2 tab" data-section="stats">Stats</div>
    </div>
    <%= render "dashboard/dashboard_messages" %>
    <%= render "dashboard/dashboard_categories" %>
    <%= render "dashboard/dashboard_produts" %>
    <%= render "dashboard/dashboard_promos" %>
    <%= render "dashboard/dashboard_users" %>
    <%= render "dashboard/dashboard_stats" %>
  </div>
</div>
<%= javascript_pack_tag 'dashboard' %>

