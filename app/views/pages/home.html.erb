<div class="container">
  <div class="row row-first-section">
    <div class="col-xs-12 col-sm-7">
        <div class="row">
          <h2 class="title-les-plus-recherchés">LES PLUS RECHERCHÉS</h2>
          <% @best_searches.each do |product| %>
            <div class="col-xs-12 col-sm-6">
              <%= link_to product_path(product) do %>
                <%= cl_image_tag product.photo %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <div class="col-xs-12 col-sm-5 contact-column">
      <div class="contanier contact-container">
        <h2>DEMANDE DE DEVIS</h2>
        <%= render 'messages/form' %>
      </div>
    </div>
  </div>
</div>
