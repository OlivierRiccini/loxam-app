<div id="toggle-categories-arrow"><span>Categories <i class="fa fa-arrow-right"></i></span></div>
<div class="container">
  <div class="tags-catgories-container">
    <% @categories.each do |category| %>
      <%= link_to category_path(category.name), class: 'category-tag' do %>
        <%= category.name.capitalize %>
      <% end %>
    <% end %>
  </div>
  <div class="tags-catgories-container-small-screen">
    <ul>
      <% @categories.each do |category| %>
        <li class="category-tag-small-screen"><%= link_to category_path(category.name) do %>
        <%= category.name.capitalize %>
      <% end %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container">
  <ul>
    <% @best_searches.each do |product| %>
      <li><%= link_to product_path(product) do %>
        <%= product.name %>
          <% end %>
          <%= product.nb_of_searches %>
        </li>
    <% end %>
  </ul>
</div>
