<div class="row row-first-section">
  <div class="col-xs-12 col-sm-6">
    <div class="container container-best-searches">
      <div class="row">
        <% @best_searches.each do |product| %>
          <div class="col-xs-12 col-sm-6">
            <%= link_to product_path(product) do %>
              <%= cl_image_tag product.photo %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6">
    <div class="contanier contact-container">
      <%= render 'messages/form' %>
    </div>
  </div>
</div>
