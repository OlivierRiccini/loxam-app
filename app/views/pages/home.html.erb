<div class="container main-container">
  <!-- Voir aussi autres loxam -->
  <div class="loxam-types-container">
    <div class="row">
      <h2>DÉCOUVREZ NOS SPECIALITÉS</h2>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3"><a href="#"><%= image_tag 'loxam-module' %></a></div>
      <div class="col-xs-12 col-sm-6 col-md-3"><a href="#"><%= image_tag 'loxam-power' %></a></div>
      <div class="col-xs-12 col-sm-6 col-md-3"><a href="#"><%= image_tag 'loxam-tp' %></a></div>
      <div class="col-xs-12 col-sm-6 col-md-3"><a href="#"><%= image_tag 'loxam-access' %></a></div>
    </div>
  </div>
  <div class="row main-row">
    <div class="col-sm-12 col-md-7 col-best-searches">
      <!-- Les plus recherchés -->
      <div class="row row-les-plus-recherches">
        <h2 class="title-les-plus-recherchés">LES PLUS RECHERCHÉS</h2>
        <% @best_searches.each do |product| %>
          <div class="col-xs-12 col-sm-6 col-item-card">
            <div class="item-card white-box">
              <% if product.photo? %>
                <div class="item-card-image" style="background-image: url('<%= cl_image_path product.photo %>'); "></div>
              <% else %>
                <div class="item-card-image" style="background-image: url('https://loremflickr.com/cache/resized/4493_37892718232_c54293c193_320_240_nofilter.jpg'); "></div>
              <% end %>
              <div class="card-infos">
              <h3><%= product.name %></h3>
                <div class="card-price-and-btn">
                  <p>à partir de <span class="price"><%= product.price %>€</span>/jour H.T</p>
                  <%= link_to 'Détails', product_path(product), class: 'loxam-btn' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
        <!-- Les nouveautés -->
      <div class="row row-les-nouveautes">
        <h2 class="title-les-plus-recherchés">LES NOUVEAUTÉS</h2>
        <% @new_products.each do |product| %>
          <div class="col-xs-12 col-sm-6 col-item-card">
            <div class="item-card white-box">
              <% if product.photo? %>
                <div class="item-card-image" style="background-image: url('<%= cl_image_path product.photo %>'); "></div>
              <% else %>
                <div class="item-card-image" style="background-image: url('https://loremflickr.com/cache/resized/4493_37892718232_c54293c193_320_240_nofilter.jpg'); "></div>
              <% end %>
              <div class="card-infos">
              <h3><%= product.name %></h3>
                <div class="card-price-and-btn">
                  <p>à partir de <span class="price"><%= product.price %>€</span>/jour H.T</p>
                  <%= link_to 'Détails', product_path(product), class: 'loxam-btn' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-12 col-md-5 contact-column">
      <!-- Demande de devis -->
      <div class="contact-container form-container">
        <h2>DEMANDE DE LOCATION?</h2>
        <%= render 'messages/form' %>
      </div>
      <!-- Promos -->
      <div class="promo-container">
        <h2>PROMOS</h2>
        <div class="promo-card-image">
          <% if @promo.display_description %>
            <h3><%= @promo.title %></h3>
            <p><%= @promo.description %></p>
          <% end %>
          <%= cl_image_tag @promo.media %>
          <i class="fa fa-arrows-alt" id="expand-cross"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="full-screen-promo">
    <%= cl_image_tag @promo.media %>
    <i class="fa fa-times-circle" id="closing-cross"></i>
  </div>
</div>

