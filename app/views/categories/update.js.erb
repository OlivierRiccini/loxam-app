var rowCategory = document.getElementById('row-category-<%= @category.id %>');

rowCategory.innerHTML = `
<div class="col-sm-6 category-name">
  <p><%= @category.name.capitalize %></p>
</div>
<div class="col-sm-6 category-actions">
  <%= simple_form_for @category, remote: true  do |f| %>
    <%= f.input :name, label: false %>
    <span class="error"></span>
    <%= f.button :submit, value: 'Modifier', class: 'loxam-btn btn-send' %>
  <% end %>
  <%= link_to category_path(@category), remote: true, :method => :delete, :data => {:confirm => "Veux-tu vraiment supprimer cette categorie Jano?"} do %>
  <i class="fa fa-trash"></i>
  <% end %>
</div>`
