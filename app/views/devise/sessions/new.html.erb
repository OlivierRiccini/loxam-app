<div class="container">
  <h2>S'identifier</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, label: 'Mot de pass', required: false %>
      <%= f.input :remember_me, as: :boolean, label: 'Se souvenir de moi' if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connection", class: 'loxam-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
